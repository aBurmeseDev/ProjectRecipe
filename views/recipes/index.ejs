<body>
   
    </header>

        <%- include('../partials/nav2') %>
    </header>

    <div class="wrapper">
    <form action="/recipes/search" method="POST">
    <div class='input-field'>
        <input  id='search-input' type='text' placeholder='Search for recipies'name="searchQuery" autocomplete='off'>
        <label for="search-input"><i class="material-icons search-icon">search</i></label>

    </div>
    </form>


    <form action="#">
    <div class='row center'>
    <p class='col l2'>
        <label>
        <input type="checkbox" />
        <span>Red</span>
      </label>
    </p>
    <p class='col l2'>
      <label>
        <input type="checkbox"/>
        <span>Yellow</span>
      </label>
    </p>
    <p class='col l2'>
      <label>
        <input type="checkbox"/>
        <span>Filled in</span>
      </label>
    </p>
    <p class='col l2'>
      <label>
        <input type="checkbox" />
        <span>Indeterminate Style</span>
      </label>
    </p>
    <p class='col l2'>
      <label>
        <input type="checkbox" />
        <span>Green</span>
      </label>
    </p>
    <p class='col l2'>
      <label>
        <input type="checkbox" />
        <span>Brown</span>
      </label>
    </p>
    <div>
  </form>


    </div>
    <div class='recipe-img center'>
    <%for(let i =0; i < recipes.data.hits.length ; i++){%>
       
        <% const encoded = encodeURIComponent(recipes.data.hits[i].recipe.uri)%>
        <a href="/recipes/<%=encoded%>">
        <img src="<%= recipes.data.hits[i].recipe.image %>" />
        </a>

    <%}%>
    </div>
</body>
</html>
