<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <link rel="stylesheet" href="/style.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
        <link href="https://fonts.googleapis.com/css?family=Roboto|Roboto+Slab" rel="stylesheet">
        <title>Document</title>
        <style>
        .row {
            margin: 5rem auto;
        }
        .col-content {
            border-radius: 5%;
            margin: 2rem;
            padding: 4rem;
        }
        .parallax-container .parallax img {
            opacity: 100;
        }
        .start-register {
          margin-bottom: 12rem;
        }
        .modal {
          width: 35%;
          margin-top: 4rem;
        }
        .modal h2 {
          text-align: center;
        }
        </style>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js" defer></script>
        <script type="text/javascript" defer>
          document.addEventListener('DOMContentLoaded', function() {
          const elems = document.querySelectorAll('.modal');
          const instances = M.Modal.init(elems);
          });
        </script>
        <script src="js/eventHandlers.js" type="text/javascript" defer></script>
    </head>
    <body>
    <header>
    <%- include('partials/nav') %>
    </header>
      <div class="parallax-container">
          <div class="parallax"><img src="/img/background-welcome-1.jpg"></div>
      </div>
      <div class="section white">
          <div class="container" >
              <div class="row">
                  <div class="grid-example col s12 m6">
                      <div class='col-content #ff5252 red accent-2'>
                          <span class="flow-text">This is left column</span>
                      </div>
                  </div>
              <div class='row'>
          <div class="grid-example col s12 m6">
                  <div class='col-content #ff5252 red accent-2'>
                          <span class="flow-text">This is right column</span>
                  </div>
              </div>
          </div>
      </div>
                    <div class='start-register center'>
                        <a href="#modal1" class="waves-effect waves-light btn #ff5252 red accent-2 modal-trigger">Get Started</a>
                    </div>

      <div id="modal1" class="modal">
        <div class="modal-content">
          <h2>Registration</h2>
            <form action="/users/register" method="post">
              Username: <input id='register-username' type="text" name="username">
              <p class="register-message message"></p>
              Password: <input id='register-password' type="password" name="password">
              <button type="submit" id="register-btn" class="btn waves-effect waves-light">Submit</button>
            </form>
        </div>
      </div>
      <div id="modal2" class="modal">
        <div class="modal-content">
          <h2>Login</h2>
            <form action="/users/login" method="post">
            Username: <input id='login-username' type="text" name="username">
            Password: <input id='login-password' type="password" name="password">
            <p class="login-message message"></p>
            <button type="submit" id="login-btn" class="btn waves-effect waves-light">Submit</button>
            </form>
        </div>
      </div>
    </body>
</html>
