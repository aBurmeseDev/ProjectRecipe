<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('../partials/head') %>
</head>

<body>
  <ul>
    <% for(let i =0; i < users.length; i++) { %>
    <% if (currentUser !== users[i].id.toString()) { %>
    <li><a href="/users/<%=users[i].id%>/cookbook"><%=users[i].username%></a></li>
    <form action="/users/<%=users[i].id%>/addfriend" method="post">
      <button type="submit" <% if (friends.some( f => f.toString() === users[i]._id.toString())) { %> disabled <% } %>>Add friend</button>
    </form>
    <% } %>
    <% } %>
  </ul>
</body>

</html>
