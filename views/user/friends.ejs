<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('../partials/head') %>
  <style>

  </style>
</head>

<body>
  <header>
    <%- include('../partials/nav2') %>
  </header>
  <main>
    <div class='row center friends-row'>
      <div class='col s12 m12 l12'>
        <h6>Your Friends' Cookbooks</h6>
        <ul>
          <% user.friends.forEach(friend => { %>
          <% if (friend.id.toString() !== user.id.toString()) { %>
          <li><a href="/users/<%=friend.id%>/cookbook"><%=friend.username%></a></li>
          <% } %>
          <% }) %>
        </ul>
      </div>
    </div>
  </main>
  <%- include('../partials/footer') %>
</body>

</html>
